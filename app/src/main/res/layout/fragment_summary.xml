<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/averageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Average Calories"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/minimumView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Minimum Calories"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/averageView"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/maximumView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Maximum Calories"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/minimumView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/averageCalories"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="34"
        android:textSize="25sp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/minimumCalories"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="34"
        android:textSize="25sp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/averageCalories" />

    <TextView
        android:id="@+id/maximumCalories"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="34"
        android:textSize="25sp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minimumCalories" />


</androidx.constraintlayout.widget.ConstraintLayout>